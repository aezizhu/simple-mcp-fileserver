{
  "name": "@aezizhu/mcp-filebridge",
  "version": "1.0.0",
  "description": "Smart MCP server that bridges LLMs to files and images with zero hallucination",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "imports": {
    "@/*": "./dist/*",
    "@/core/*": "./dist/core/*",
    "@/plugins/*": "./dist/plugins/*",
    "@/services/*": "./dist/services/*",
    "@/middleware/*": "./dist/middleware/*",
    "@/utils/*": "./dist/utils/*",
    "@/types/*": "./dist/types/*",
    "@/controllers/*": "./dist/controllers/*",
    "@/models/*": "./dist/models/*",
    "@/config/*": "./dist/config/*"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc && npm run build:assets",
    "build:assets": "cp -r src/assets dist/ 2>/dev/null || true",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:dev": "tsx watch src/index.ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration",
    "test:e2e": "playwright test",
    "test:ci": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:debug": "vitest --inspect-brk",
    "test:performance": "vitest tests/performance",
    "test:security": "vitest tests/security",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "docker:build": "docker build -t mcp-enterprise-server .",
    "docker:run": "docker run -p 3000:3000 mcp-enterprise-server",
    "docs:generate": "typedoc src/index.ts",
    "benchmark": "node dist/benchmark/performance.js",
    "security:audit": "npm audit && snyk test",
    "clean": "rimraf dist coverage .nyc_output",
    "prepare": "husky install",
    "release": "semantic-release"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "multimodal",
    "enterprise",
    "vision",
    "llm",
    "json-rpc",
    "image-analysis",
    "ocr",
    "ai",
    "machine-learning",
    "typescript",
    "scalable",
    "production-ready"
  ],
  "author": {
    "name": "aezizhu",
    "email": "aezizhu@example.com",
    "url": "https://github.com/aezizhu"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aezizhu/mcp-filebridge.git"
  },
  "bugs": {
    "url": "https://github.com/aezizhu/mcp-filebridge/issues"
  },
  "homepage": "https://github.com/aezizhu/mcp-filebridge#readme",
  "dependencies": {
    "sharp": "^0.33.0",
    "tesseract.js": "^5.0.4",
    "mime-types": "^2.1.35",
    "axios": "^1.6.2",
    "exifr": "^7.1.3",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "prom-client": "^15.1.0",
    "node-cache": "^5.1.2",
    "bull": "^4.12.2",
    "redis": "^4.6.10",
    "mongodb": "^6.3.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "inversify": "^6.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/mime-types": "^2.1.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "tsx": "^4.6.0",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "playwright": "^1.40.1",
    "typedoc": "^0.25.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "semantic-release": "^22.0.8",
    "rimraf": "^5.0.5",
    "snyk": "^1.1266.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  },
  "peerDependencies": {
    "redis": "^4.0.0",
    "mongodb": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "redis": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}