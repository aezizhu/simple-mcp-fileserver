# MCP FileBridge - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=localhost
PORT=3000

# Node.js environment
NODE_ENV=development

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Authentication (set AUTH_ENABLED=true to enable)
AUTH_ENABLED=false
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Authorization (set AUTHZ_ENABLED=true to enable)
AUTHZ_ENABLED=false

# Security headers
HELMET_ENABLED=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache settings
CACHE_ENABLED=true
CACHE_TYPE=memory
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Redis configuration (when CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Monitoring settings
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_ENABLED=true

# =============================================================================
# IMAGE PROCESSING CONFIGURATION
# =============================================================================

# Maximum image dimensions for base64 output
MAX_IMAGE_DIMENSION=2048

# JPEG quality for compressed images
IMAGE_QUALITY=85

# OCR language (eng, chi_sim, fra, etc.)
OCR_LANGUAGE=eng
